<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.News" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@color/primary_60</item>
        <item name="colorPrimary">@color/primary_60</item>
        <item name="colorAccent">@color/primary_50</item>
        <item name="colorPrimaryDark">@color/primary_50</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        ...
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>

    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorAccent">#00677C</item>
        <item name="colorPrimary">@color/primary_60</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorControlActivated">#00677C</item>


        <!--Calender Background color -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:selectableItemBackgroundBorderless">@color/primary_50</item>
        <item name="rangeFillColor">@color/primary_50</item>

        <!-- Customize text field of the text input mode. -->

    </style>
    <!-- Disabling elevation overlays because when chip's default background/surface
         composite are combined with elevation overlays in a highly elevated dialog,
         the resulting color becomes too light and causes contrast
         issues. -->
    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="label">
